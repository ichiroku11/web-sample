@page "{tip}"
@model ShortHtmlModel
@{
	ViewBag.Title = "短いHTMLコードで実装できる小技テク17選";
	ViewBag.Subtitle = Model.Tip.GetDisplayName();
}

<section class="app-sample shorthtml-sample-@Model.Tip.ToString().ToLower()">
	@if (Model.Tip == ShortHtmlTip.OlStart) {
		<ol start="11">
			<li>HTML</li>
			<li>CSS</li>
			<li>JavaScript</li>
		</ol>
	} else if (Model.Tip == ShortHtmlTip.Meter) {
		foreach (var (id, label, value) in new[] {
			 ("value1", "Low", 25),
			 ("value2", "Medium", 50),
			 ("value3", "High", 90) }) {
			<label for="@id">@label</label>
			<meter id="@id" min="0" max="100" low="30" high="75" optimum="80" value="@value"></meter>
		}
	} else if (Model.Tip == ShortHtmlTip.DataList) {
		<input list="items" />
		<datalist id="items">
			<option value="Apple" />
			<option value="Bus" />
			<option value="Cup" />
			<option value="Duck" />
			<option value="Frog" />
		</datalist>
	} else if (Model.Tip == ShortHtmlTip.InputRange) {
		<div>
			<label for="input-range">range</label>
			<input id="input-range" type="range" min="0" max="20">
		</div>
		<div>
			<label for="input-number">number</label>
			<input id="input-number" type="number">
		</div>
		<script>
			const range = document.querySelector("#input-range");
			const number = document.querySelector("#input-number");
			number.value = range.value;

			range.addEventListener("change", () => {
				number.value = range.value;
			});
		</script>
	} else if (Model.Tip == ShortHtmlTip.AnchorDownload) {
		<div>
			<a href="~/sample.pdf">ダウンロード属性なし</a>
		</div>
		<div>
			<a href="~/sample.pdf" download>ダウンロード属性あり</a>
		</div>
	} else if (Model.Tip == ShortHtmlTip.InputSearch) {
		<div>
			<label for="input-text">text</label>
			<input id="input-text" type="text" value="abc" />
		</div>
		@* type="search"は、取り消し用の「×」マークが表示される *@
		<div>
			<label for="input-search">search</label>
			<input id="input-search" type="search" value="abc" />
		</div>
	}
</section>

<section class="app-reference">
	<ul>
		<li><a href="https://photoshopvip.net/129002">【HTML】知っておくと便利！短いHTMLコードで実装できる小技テク17選 - PhotoshopVIP</a></li>
	</ul>
</section>
