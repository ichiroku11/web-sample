@* カード *@
<section class="app-sample fc-sample-card">
	<h3>カード</h3>
	<div class="fc-card-container">
		<div class="fc-card-option-row">
			<input class="fc-card-option-input" checked id="fc-card-option-1" type="radio" name="fc-card-options" />
			<label class="fc-card-option-label" for="fc-card-option-1">
				<span class="fc-card-option-label-text">1<sub>gb</sub></span>
			</label>
			<input class="fc-card-option-input" id="fc-card-option-2" type="radio" name="fc-card-options" />
			<label class="fc-card-option-label" for="fc-card-option-2">
				<span class="fc-card-option-label-text">5<sub>gb</sub></span>
			</label>
		</div>
		<div class="fc-card-option-row">
			<input class="fc-card-option-input" id="fc-card-option-3" type="radio" name="fc-card-options" />
			<label class="fc-card-option-label" for="fc-card-option-3">
				<span class="fc-card-option-label-text">10<sub>gb</sub></span>
			</label>
			<input class="fc-card-option-input" id="fc-card-option-4" type="radio" name="fc-card-options" />
			<label class="fc-card-option-label" for="fc-card-option-4">
				<span class="fc-card-option-label-text">20<sub>gb</sub></span>
			</label>
		</div>
	</div>
</section>

