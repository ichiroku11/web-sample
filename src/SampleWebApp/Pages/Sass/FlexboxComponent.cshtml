@page
@{
	ViewBag.Title = "Flexboxを使ったコンポーネント";
}

@functions {
	// ChevronLeft以外
	private static IEnumerable<Svg> _menuIcons = new[] {
		Svg.Archive,
		Svg.Star,
		Svg.Tag,
		Svg.Trash,
		Svg.ThreeDots,
	};
}
@* メニューアイテムの均等割 *@
<section class="app-sample fc-sample-menu">
	<h3>メニューアイテム1</h3>
	<div class="fc-menu-container">
		<ul>
			@foreach (var icon in _menuIcons) {
				<li><a href="#"><partial name="_Svg" model="icon" /></a></li>
			}
		</ul>
	</div>
</section>

@* よくあるメニューアイテム（「戻る」が左） *@
<section class="app-sample fc-sample-menu2">
	<h3>メニューアイテム2</h3>
	<div class="fc-menu-container">
		<ul>
			<li><a href="#"><partial name="_Svg" model="Svg.ChevronLeft" /></a></li>
		</ul>
		<ul>
			@foreach (var icon in _menuIcons) {
				<li><a href="#"><partial name="_Svg" model="icon" /></a></li>
			}
		</ul>
	</div>
</section>

@functions {
	// ChevronLeft以外
	private static IEnumerable<(Svg icon, string label)> _actionItems = new[] {
		(Svg.HandThumbsUp, "Like"),
		(Svg.ChatLeft, "Comment"),
		(Svg.Upload, "Share"),
		(Svg.ThreeDots, ""),
	};
}
<section class="app-sample fc-sample-action">
	<h3>アクションフッタ</h3>
	<ul>
		@foreach (var (icon, label) in _actionItems) {
			<li><a href="#"><partial name="_Svg" model="icon" />@label</a></li>
		}
	</ul>
</section>

